(
SynthDef(\lcsynth1, {arg out=0, amp=0.1, pan=0.0, freq=440, sustain=0.1;
var sound, env;

env=EnvGen.ar(Env([1,0],[sustain]),doneAction:2);

sound=Saw.ar;

Out.ar(out, sound)
